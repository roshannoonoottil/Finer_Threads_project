<%- include ('adminHeader') %>


<section class="content-main">
  <div class="content-header">
    <div>
      <h2 class="content-title card-title">Users Details</h2>
    </div>
      </div>
    </div>
    <header class="card card-body mb-4">
      <div class="row gx-3">
        <form class="d-flex" role="search" action="/admin/userS" method="post" >
        <div class="col-lg-4 col-md-6 me-auto">
          <input type="search" placeholder="Search..." class="form-control" name="search" value="<%= nameSearch %>"/>
        </div>
        </form>
    </div>
    </header>
  </div>
  <div class="card">
    <div class="card-body">
      <div class="row">
        
        <div class="container mt-5">
          <div class="row">
            <table class="table table-striped" width="50%>">
              <tr>
                <th style="color:rgb(0, 0, 0);font-size: large; text-align: center; ">Username</th>
                <th style="color:rgb(0, 0, 0);font-size: large; text-align: center; ">Email</th>
                <th style="color:rgb(0, 0, 0);font-size: large; text-align: center; ">Phone</th>
                <th style="color:rgb(0, 0, 0);font-size: large; text-align: center; ">Action</th>
              </tr>
              <% for(let u of users) { %>
              <tr>
                <td style="text-align: center;"><%=u.username%></td>
                <td style="text-align: center;"><%=u.email %> </td>
                <td style="text-align: center;"><%=u.mobile%> </td>
                </td>                
                <td style="text-align: center;">
                  <a href="/admin/block/<%=u.username %>">
                    <% if (u.status){ %>
                    <button class="btn btn-success">Un Block</button>
                    <% }else{ %>
                    <button class="btn btn-danger">Block</button>
                    <% } %>
                  </a>
                </td>
              </tr>
              <% } %>
              
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


<%- include ('adminFooter') %>
