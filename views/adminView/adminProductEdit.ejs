              <!-- <h1 class="card-title text-center mb-4">Edit User</h1> -->
              <form action="/admin/productUpdate" method="POST">
                <div class="form-group">
                <input type="hidden" name="oldProdName" value="<%=oldName %>">
                  <label for="username" style="font-size:large;">Enter new name</label>
                  <input
                    type="text"
                    class="form-control"
                    id="username"
                    name="newProdName"
                    value="<%=oldName %>"
                  />
                 <p><br></p>
                  
                </div>
                <div class="form-group">
                  <label for="description" style="font-size:large;">Choose new category</label>
                  <select class="form-control" id="productCategory" name="newProdCat" required>
          
                <option value="" selected disabled>Choose a category</option>
                <% for(let a of category) { %>
                <option value="<%=a.name %>"><%=a.name %></option> 
                <% } %>
                </select> 
                </div>
                <br>
                <label for="username" style="font-size:large;">Update Rate</label>
                  <input
                    type="text"
                    class="form-control"
                    id="username"
                    name="newProdRate"
                    value="<%=oldRate %>"
                  /><br>
                  <label for="username" style="font-size:large;">Update Quantity</label>
                  <input
                    type="text"
                    class="form-control"
                    id="username"
                    name="newProStock"
                    value="<%=oldStock %>"
                  /><br>
                  <label for="username" style="font-size:large;">Update Description</label>
                  <input
                    type="text"
                    class="form-control"
                    id="username"
                    name="newProdDesc"
                    value="<%=oldDesc %>"
                  /><br>
                <button type="submit" class="btn btn-primary btn-block">
                  Update
                </button>
                <a style="margin-left:40%; color: white;" href="/admin/product" class="btn btn-dark">Go Back</a>
              </form>
